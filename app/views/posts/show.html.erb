<h1><%= @post.title %></h1>

<%= @post.content %>

<ul>
	<% @post.comments.each do |c|%>
		<li><%= c.comment %>
		<%= link_to 'Edit comment',edit_post_comment_path(@post,c) %>
		<%= link_to 'Delete comment',post_comment_path(@post,c),:method => :delete %>
		</li>
	<%end%>
</ul>	

<%= link_to '編輯內文' , edit_post_path(@post) %>
<%= link_to '新增留言' , new_post_comment_path(@post.id) %>
<%= button_to '刪除文章' , post_path(@post) , :method => :delete %>
<%= link_to '返回首頁' , posts_path %>