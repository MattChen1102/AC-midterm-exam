<h3>文章標題：<%= @post.title %></h3>

<h3>內文：<%= @post.content %></h3>

<ul>
	<% @post.comments.each do |c|%>
		<li>回覆內容：<%= c.comment %>
		<%= link_to '編輯回覆',edit_post_comment_path(@post,c) %>
		<%= link_to '刪除回覆',post_comment_path(@post,c),:method => :delete %>
		</li>
	<%end%>
</ul>	

<%= link_to '編輯文章' , edit_post_path(@post) %>
<%= link_to '新增留言' , new_post_comment_path(@post.id) %>
<%= button_to '刪除文章' , post_path(@post) , :method => :delete %>
<%= link_to '返回首頁' , posts_path %>